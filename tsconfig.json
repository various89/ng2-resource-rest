    "./src/Interfaces",
    "./src/Resource",
    "./src/ResourceAction",
    "./src/ResourceCRUD",
    "./src/ResourceCRUDBase",
    "./src/ResourceGlobalConfig",
    "./src/ResourceModel",
    "./src/ResourceParams",
    "./src/ResourceProviders",
    "node_modules/typescript/lib/lib.es2015.promise.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
